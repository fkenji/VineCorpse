<section id="portfolio" class="gray-bg padding-top-bottom">
      
  <div class="container">
  
    <header class="section-header text-center">
    
      <h1 class="scrollimation scale-in in"><%= @movie.title %></h1>
    
    </header>    
    
  </div><!--End portfolio header -->
  
  <div class="container masonry-wrapper">
  
    <div id="projects-container">
    
      <article class="project-item web-design masonry-brick" style="position: absolute; top: 0px; left: 0px;">
        
        <div class="reel">
          <%= render 'reel' %>
        </div>        
       
      <div>
        <button id="add-more-vines" class="btn btn-meflat icon-left btn-centered">Add More Vines</button> <br>
        <%= button_to "Submit Movie", user_path(current_user), :method => "get", id: "add-more-vines", class: "btn btn-meflat icon-left btn-centered" %>
      </div>

      </article>        
        
    </div>

    <div class="section-header row clips">
      <%= render 'clips' %>      
    </div>
        
    </div><!-- End projects -->     
  </div><!-- End container -->           
</section>

<section id="add-more-vines-form" class="gray-bg padding-top-bottom">

    <div class="container">
    
      
    <%= form_tag(search_path, method: 'get', remote: true, class: "navbar-form", role: "search") do %>
      <h4>Search to Add More Vines</h4>
      <div class="input-group">
          <input type="text" class="form-control" placeholder="puppies" name="tag">
          <div class="input-group-btn">
              <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
          </div>
      </div>        
    <% end %> 
    
  </div>

  <div class="container">
    <%= form_for @movie, remote: true do |f| %>
    <div class="search-results">

    </div>
    <%= f.submit "Done", id:"add-more-vines-btn", class: "btn btn-meflat icon-left btn-centered", style: "display:none" %>

    <% end %>
  </div>
</section>
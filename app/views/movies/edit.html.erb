<section id="portfolio" class="gray-bg padding-top-bottom">
      
  <div class="container">
  
    <header class="section-header text-center">
    
      <h1 class="scrollimation scale-in in"><%= @movie.title %></h1>
    
    </header>    
    
  </div><!--End portfolio header -->
  
  <div class="container masonry-wrapper">
  
    <div id="projects-container">
    
      <article class="project-item web-design masonry-brick" style="position: absolute; top: 0px; left: 0px;">
        
        <div class="reel">
          <%= render 'reel' %>
        </div>        
        
      </article>        
        
    </div>

    <div class="section-header row">
      <%= render 'clips' %>      
    </div>
        
    </div><!-- End projects -->     
  </div><!-- End container -->           
</section>

<section id="add-more-vines" class="gray-bg padding-top-bottom">

    <div class="container">
    
      
    <%= form_tag(search_path, method: 'get', remote: true, class: "navbar-form", role: "search") do %>
      <h4>Search to Add More Vines</h4>
      <div class="input-group">
          <input type="text" class="form-control" placeholder="puppies" name="tag">
          <div class="input-group-btn">
              <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
          </div>
      </div>        
    <% end %> 

    
  </div>
  

<%= form_for @movie, remote: true do |f| %>
<div class="search-results">

</div>
<%= f.submit "Add vines to movie" %>
<% end %>

</section>
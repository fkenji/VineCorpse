<section id="portfolio" class="gray-bg padding-top-bottom">
      
  <div class="container">
  
    <header class="section-header text-center">
      <h1 class="scrollimation scale-in in">   <%= @movie.title  %>     </h1>
    </header>    
  </div>
  <div class="container">
    
    <div class="row">
        <div class="col-md-6 col-md-offset-4" >
          <div class="reel" >
            <%= render 'reel' %>
          </div>        
        </div>        
    </div>
    <div class="row">
          <div class="col-md-12" >
            <button id="add-more-vines" class="btn btn-meflat icon-left btn-centered">Add More Vines</button> <br>
            <%= button_to "Submit Movie", user_path(current_user), :method => "get", id: "submit-movie", class: "btn btn-meflat icon-left btn-centered" %>
          </div>        
      
    </div>

  </div>

  <div class="container">

    <div class="row">
      <div class="clips">
        <%= render 'clips' %>      
      </div>
          
    </div>

  </div><!-- End container -->           
</section>

<section class="gray-bg padding-top-bottom">
</section>

<section id="add-more-vines-form" class="gray-bg padding-top-bottom">

    <div class="container">
    
      
    <%= form_tag(search_path, method: 'get', remote: true, class: "navbar-form", role: "search") do %>
      <h4>Search to Add More Vines</h4>
      <div class="input-group">
          <input type="text" class="form-control" placeholder="puppies" name="tag">
          <div class="input-group-btn">
              <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
          </div>
      </div>        
    <% end %> 
    
  </div>

  <div class="container">
    <%= form_for @movie, remote: true do |f| %>
    <div class="search-results">

    </div>
    <%= f.submit "Done", id:"add-more-vines-btn", class: "btn btn-meflat icon-left btn-centered", style: "display:none" %>

    <% end %>
  </div>
</section>
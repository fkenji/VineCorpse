<% if @vines && @vines.size > 0 %>    
    <section id="portfolio" class="gray-bg padding-top-bottom">
   
      <div class="container">
      
        <header class="section-header text-center">
        
          <h1 class="scrollimation scale-in">Step 2 - Add a title, choose the <%= @tag%> vines you'll use to create your movie, and submit!</h1>
          <p>                
            <%= form_for @movie do |f| %>
              <div class="form-group">
                <%= f.label "Movie Title" %> 
                <%= f.text_field :title, class: "form-control" %>
              </div>
          </p>
        </header>
            
      </div><!--End portfolio header -->
      
      <div class="container masonry-wrapper scrollimation fade-in">    
        <div id="projects-container">        
            <%= render 'search/results' %>                      
        </div><!-- End projects --> 
        
        
        <div class="section-header text-center"><p>
          <div class="form-group">
              <%= f.submit class: "btn btn-meflat icon-left" %>
          </div>
        </p></div>
      </div><!-- End container -->

          <% end %>
    </section>
<% else %>
<section class="gray-bg slab">
      <div class="container">
        <header class="section-header text-center">
          <h1 class="scrollimation scale-in in">Aw shoot... sorry.</h1>
        </header>
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2">
            <p class="text-center scrollimation fade-in in">Couldn't find any results. Try something a little simpler like "Skateboarding" </p>
          </div>
        </div>
        <p class="text-center">
          <%= link_to 'Back', root_path, class: "btn btn-meflat black icon-left" %>
        </p>
      </div>    
</section>     
<% end %>      
<!DOCTYPE html>
<html>
<head>
  <title>VineCorpse</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Roboto+Slab:400,700' %>
  <%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Titillium+Web:400,300,300italic,200,400italic,600,600italic' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= analytics_init if Rails.env.production? %>
</head>
<body data-spy="scroll" data-target="#main-nav" data-offset="400">
    <!-- ==============================================
    MAIN NAV
    =============================================== -->
<div id="main-nav" class="navbar navbar-fixed-top">
  <div class="container">
  
    <div class="navbar-header">
    
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#site-nav">
        <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
      </button>
      
      <!-- ======= LOGO (for small screens)========-->
      <a class="navbar-brand visible-xs scrollto" href="#home">Jd</a>
      
    </div>
    
    <div id="site-nav" class="navbar-collapse collapse">
      <ul class="nav navbar-nav">
        <li>
        <%= link_to 'VineMash', root_path %>
        </li>
        <li>
          <a href="#about" class="scrollto">About Me</a>
        </li>

        <li id="logo">
          <% if !logged_in? %>
      <li><%= link_to 'Log in with Facebook', '/auth/facebook' %></li>
      <% else %>
             <li><%= link_to image_tag(current_user.image_url), user_path(current_user), class: 'profile-image'%>
      </li>
      <li><%= link_to 'Logout', '/logout', method: "delete" %></li>
      <% end %>

        <li>
          <a href="#portfolio" >My Works</a>
        </li>

      </ul>
    </div><!--End navbar-collapse -->
    
  </div><!--End container -->
  
</div><!--End main-nav -->
 


<%= yield %>

</body>
</html>
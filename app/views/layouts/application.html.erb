<!DOCTYPE html>
<html>
<head>
  <title>VineCorpse</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= analytics_init if Rails.env.production? %>
</head>
<body>
<div class="navbar navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <%= link_to 'VineMash', root_path, class: 'navbar-brand' %>
    </div>
    <ul class="nav navbar-nav">
      <% if !logged_in? %>
      <li><%= link_to 'Log in with Facebook', '/auth/facebook' %></li>
      <% else %>
      <li><%= link_to image_tag(current_user.image_url), user_path(current_user), class: 'profile-image' %>

      </li>
      <li><%= link_to 'Logout', '/logout', method: "delete" %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="container">
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>
 
<div class="page-header">
    <h1><%= yield :page_header %></h1>
</div>
<%= yield %>



</body>
</html>